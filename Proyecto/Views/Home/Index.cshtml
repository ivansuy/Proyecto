@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        /* Estilo del botón del chatbot */
        #chatbot-toggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #00bfff; /* Color celeste */
            color: white;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            border: none;
            outline: none;
            font-size: 24px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            z-index: 1000;
        }

        /* Estilo del cuadro de chat */
        #chatbot-container {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 300px;
            display: none;
            border: 2px solid #007bff;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            overflow: hidden;
        }

        #chatbot-header {
            background-color: #007bff;
            color: white;
            padding: 10px;
            text-align: center;
            cursor: pointer;
            position: relative;
        }

            #chatbot-header #close-chat {
                position: absolute;
                top: 10px;
                right: 10px;
                cursor: pointer;
            }

        #chatbot-body {
            height: 300px;
            overflow-y: auto;
            padding: 10px;
            background-color: #f9f9f9;
        }

        #chatbot-input {
            padding: 10px;
            width: calc(100% - 20px);
            border: none;
            border-top: 1px solid #ddd;
            outline: none;
        }

        .user-message, .bot-message {
            padding: 8px;
            border-radius: 10px;
            margin-bottom: 10px;
            max-width: 80%;
            clear: both;
        }

        .user-message {
            background-color: #007bff;
            color: white;
            text-align: right;
            float: right;
        }

        .bot-message {
            background-color: #f1f1f1;
            text-align: left;
            float: left;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4"><i class="fa fa-home"></i> Bienvenido</h1>
            <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-box"></i> Empaque</h5>
                        <button type="button" onclick="location.href='@Url.Action("CrearDetalle", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Empaque
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-truck"></i> Proveedor</h5>
                        <button type="button" onclick="location.href='@Url.Action("Vistprovee", "Proveedor")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Proveedor
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-user-friends"></i> Cliente Interno</h5>
                        <button type="button" onclick="location.href='@Url.Action("Cliente_interno", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Cliente Interno
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-plus"></i> Crear Producto</h5>
                        <button type="button" onclick="location.href='@Url.Action("CrearProducto", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Crear Producto
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-exchange-alt"></i> Movimiento</h5>
                        <button type="button" onclick="location.href='@Url.Action("move", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Movimiento
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-warehouse"></i> Almacén</h5>
                        <button type="button" onclick="location.href='@Url.Action("almacen", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Almacén
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-box-open"></i> Existencia</h5>
                        <button type="button" onclick="location.href='@Url.Action("existencia", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Existencia
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-sign-in-alt"></i> Ingreso</h5>
                        <button type="button" onclick="location.href='@Url.Action("ingreso", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a Ingreso producto
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-sign-out-alt"></i> Salida</h5>
                        <button type="button" onclick="location.href='@Url.Action("salida", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a salida producto
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><i class="fa fa-chart-line"></i> Reporte</h5>
                        <button type="button" onclick="location.href='@Url.Action("reporte", "Producto")'" class="btn btn-primary">
                            <i class="fa fa-arrow-right"></i> Ir a reporte
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón para abrir el chatbot -->
    <button id="chatbot-toggle" title="Chatbot">
        <i class="fa fa-comments"></i>
    </button>

    <!-- Contenedor del chatbot -->
    <div id="chatbot-container">
        <div id="chatbot-header">
            Chatbot <i class="fa fa-times" id="close-chat"></i>
        </div>
        <div id="chatbot-body">
            <div class="bot-message">Hola, ¿en qué puedo ayudarte hoy?</div>
        </div>
        <input type="text" id="chatbot-input" placeholder="Escribe un mensaje..." />
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Abrir y cerrar el chatbot
        document.getElementById('chatbot-toggle').onclick = function () {
            document.getElementById('chatbot-container').style.display = 'block';
        };
        document.getElementById('close-chat').onclick = function () {
            document.getElementById('chatbot-container').style.display = 'none';
        };

        // Manejar mensajes del usuario y respuestas del bot
        document.getElementById('chatbot-input').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                var userMessage = e.target.value.trim();
                if (userMessage !== '') {
                    // Mostrar mensaje del usuario
                    var userHtml = '<div class="user-message">' + escapeHtml(userMessage) + '</div>';
                    document.getElementById('chatbot-body').innerHTML += userHtml;

                    // Generar respuesta del chatbot (básica)
                    var botResponse = getBotResponse(userMessage);
                    var botHtml = '<div class="bot-message">' + botResponse + '</div>';
                    document.getElementById('chatbot-body').innerHTML += botHtml;

                    // Limpiar el input
                    e.target.value = '';

                    // Scroll hacia el final
                    var chatbotBody = document.getElementById('chatbot-body');
                    chatbotBody.scrollTop = chatbotBody.scrollHeight;
                }
            }
        });

        // Respuestas automáticas básicas del chatbot
        function getBotResponse(input) {
            // Respuestas básicas
            var lowerInput = input.toLowerCase();
            if (lowerInput.includes('hola') || lowerInput.includes('buenas')) {
                return '¡Hola! ¿Cómo te puedo ayudar?';
            } else if (lowerInput.includes('producto')) {
                return 'Puedes ver los productos en la sección de Inventario.';
            } else if (lowerInput.includes('almacén')) {
                return 'El almacén está disponible en el menú principal.';
            } else if (lowerInput.includes('reporte')) {
                return 'Puedes generar reportes en la sección de Reportes.';
            } else {
                return 'Lo siento, no entiendo la pregunta. Por favor, intenta con otra consulta.';
            }
        }

        // Función para escapar HTML y evitar inyecciones
        function escapeHtml(text) {
            var map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function (m) { return map[m]; });
        }
    </script>
</body>
</html>
